generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:root@localhost:5432/postgres?schema=public"
}

model cardapio {
  nome    String    @unique(map: "nome_unico") @db.VarChar
  preco   Float
  id      Int       @id @default(autoincrement())
  pedidos pedidos[]
}

model pedidos {
  id         Int       @id @default(autoincrement())
  id_usuario Int
  id_produto Int
  observacao String?
  cardapio   cardapio? @relation(fields: [id_produto], references: [id], onDelete: NoAction, onUpdate: NoAction)
  usuarios   usuarios  @relation(fields: [id_usuario], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model usuarios {
  email   String    @id @db.VarChar(255)
  senha   String    @db.VarChar(255)
  id      Int       @unique @default(autoincrement())
  pedidos pedidos[]
}
